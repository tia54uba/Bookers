<h1>Books</h1>
    <% @books.each do |book| %>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>

 <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
  </tr>
  
  <tr>
  </tr>
</table>
<% end %>






<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>